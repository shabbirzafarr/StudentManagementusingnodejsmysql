<div class="container mt-5">
  <div class="row g-3">
    <!-- Student ID Field -->
    <div class="col-md-6">
      <div class="form-floating">
        <input type="text" class="form-control" id="studentId" value="{{this.id}}" placeholder="Student ID" name="id">
        <label for="studentId">Student ID</label>
      </div>
    </div>
    
    <!-- Semester Field -->
    <div class="col-md-6">
      <div class="form-floating">
        <input type="text" class="form-control" id="semester" value="{{this.semester}}" placeholder="Semester" name="semester">
        <label for="semester">Semester</label>
      </div>
    </div>
    
    <!-- CGPA Field -->
    <div class="col-md-6">
      <div class="form-floating">
        <input type="text" class="form-control" id="cgpa" value="{{this.cgpa}}" placeholder="CGPA" name="cgpa">
        <label for="cgpa">CGPA</label>
      </div>
    </div>

    <!-- Submit Button -->
    <div class="col-12 d-grid">
      <button class="btn btn-primary btn-lg" type="submit">Submit</button>
    </div>
  </div>
</div>

