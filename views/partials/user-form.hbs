<div class="container mt-5">
  <div class="row g-3">
    <!-- Student ID Field -->
    <div class="col-md-6">
      <div class="form-floating mb-3">
        <input type="text" class="form-control" id="studentId" value="{{this.id}}" placeholder="Student ID" name="id">
        <label for="studentId">Student ID</label>
      </div>
    </div>
    
    <!-- Name Field -->
    <div class="col-md-6">
      <div class="form-floating mb-3">
        <input type="text" class="form-control" id="studentName" value="{{this.name}}" placeholder="Name" name="name">
        <label for="studentName">Name</label>
      </div>
    </div>
    
    <!-- Batch Field -->
    <div class="col-md-6">
      <div class="form-floating mb-3">
        <input type="text" class="form-control" id="studentBatch" value="{{this.batch}}" placeholder="Batch" name="batch">
        <label for="studentBatch">Batch</label>
      </div>
    </div>
    
    <!-- Gender Field -->
    <div class="col-md-6">
      <div class="form-floating mb-3">
        <input type="text" class="form-control" id="studentGender" value="{{this.gender}}" placeholder="Gender" name="gender">
        <label for="studentGender">Gender</label>
      </div>
    </div>
    
    <!-- Department Field -->
    <div class="col-md-6">
      <div class="form-floating mb-3">
        <input type="text" class="form-control" id="studentDepartment" value="{{this.department}}" placeholder="Department" name="department">
        <label for="studentDepartment">Department</label>
      </div>
    </div>
    
    <!-- Phone Field -->
    <div class="col-md-6">
      <div class="form-floating mb-3">
        <input type="text" class="form-control" id="studentPhone" value="{{this.phone}}" placeholder="Phone" name="phone">
        <label for="studentPhone">Phone</label>
      </div>
    </div>
    
    <!-- Email Field -->
    <div class="col-md-6">
      <div class="form-floating mb-3">
        <input type="email" class="form-control" id="studentEmail" value="{{this.email}}" placeholder="Email" name="email">
        <label for="studentEmail">Email</label>
      </div>
    </div>

    <!-- Submit Button -->
    <div class="col-12 d-grid">
      <button class="btn btn-primary btn-lg" type="submit">Submit</button>
    </div>
  </div>
</div>

