<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add New User - Students Result Information CRUD</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom Styles -->
  <style>
    body {
      background-color: #f8f9fa; /* Light gray background */
    }
    .breadcrumb {
      background-color: transparent; /* Transparent background for breadcrumb */
      padding: 0.5rem 1rem; /* Padding around breadcrumb */
      border-radius: 0; /* No border radius */
    }
    .breadcrumb-item {
      font-size: 0.9rem; /* Smaller font size for breadcrumb items */
    }
    .alert {
      margin-top: 1rem; /* Spacing above alert message */
    }
    .form-floating {
      margin-bottom: 1.5rem; /* Spacing between form fields */
    }
  </style>
</head>

<body>
  <!-- Breadcrumb Navigation -->
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/" class="text-dark">Home</a></li>
      <li class="breadcrumb-item active" aria-current="page">New User</li>
    </ol>
  </nav>

  <!-- Alert Message -->
  {{#if alert}}
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    {{alert}}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
  {{/if}}

  <!-- Form for Adding Result -->
  <!-- User Form -->
  <form class="row g-3 needs-validation" method="POST" action="/addresult" novalidate>
    {{> result-form}}
    <!-- Include your user-form partial template here -->
  </form>

  <!-- Bootstrap JS Bundle (Bootstrap JS + Popper.js) -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
    integrity="sha384-FTK92IpPaEzTlOeFSgXBMUQRVeA0MN0swDeEvm/e32xITFZByPrLXAS4lT5/w+hD" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-cmOHFTxUQ78cD8E0i8tTAqCqchFsiq2DtbbzHpW71YubA0Je4scwaELAxFcW9C6K" crossorigin="anonymous"></script>
</body>

</html>
